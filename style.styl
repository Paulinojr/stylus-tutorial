primary = #475CD1
red = #BE2525

border-radius(radius = 5px)
    -webkit-border-radius radius
    border-radius radius

clear-fix()
    zoom 1
    &:after
    &:before
        content ""
        display table
    &:after
        clear both

body
    background primary
    color: red
    border: solid 1px @color
    main 
        color primary
        border solid 1px @color
        border-radius 10px
        clear-fix()