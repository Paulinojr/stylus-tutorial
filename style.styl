@import 'nib'
@import 'styl/*'

normalize-base()
normalize-html5()

add(a = 0, b = 0, c = 0)
    a + b + c

multipleValues(a, b)
    return a b
    
body
    background linear-gradient(top, white, black)
    color red
    fixed top 20px left 2%
    border solid 1px @color
    margin-left add(1,2,3)
    main
        margin-left multipleValues(10px, 5px)
        color primary
        transition(all 0.2 ease)
        border solid 1px @color
        border-radius 10px
        test(15)
        clearfix()
        a
            overflow ellipsis
            shadow-stroke(primary)